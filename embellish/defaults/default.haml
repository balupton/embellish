%head
  :css
    body {
      width: 650px;
      margin: 100px auto 10px auto;
      font-family: Helvetica;
      font-size: 14px;
      color: #000;
      letter-spacing: 0.05em;
      line-height: 1.5em; }
    h1 {
      font-size: 50px; 
      margin-top: 2em; }
    h1, h2, h3 {
      font-family: Helvetica;
      letter-spacing: 0em;
      line-height: 1em; 
      margin-bottom: 0; }
    h2 {
      padding-bottom: 0.1em;
      margin-top: 2em;
      border-bottom: 1px solid #CCC;
    }
    .timestamp {
      margin-top: 6em;
      text-align: right;
      border-top: 1px solid #CCC;
      font-size: 12px;
      font-family: monospace;
      color: #999; }
    code {
      padding: 0px 5px; }
    pre {
      margin: 0;
    }
    .codehilite {
      overflow: auto;
      padding: 7px 20px;
      }
    code, .codehilite {
      background-color: #EEE;
      border: 1px solid #DDD;
      color: #333;
      font-size: 12px; 
      line-height: 1.5em; }

    @media screen and (max-width: 700px) {
      body {
        width: auto;
        margin-top: 50px;
        margin-left: 30px;
        margin-right: 30px; } }

    @media screen and (max-width: 450px) {
      body {
        margin-top: 20px;
        width: auto;
        margin-left: 15px;
        margin-right: 15px; } 
      code,
      .codehilite {
      }
      h1 { 
        font-size: 26px; }
      h2, h3 {
        font-size: 16px; }
      h1, h2, h3 {
        line-height: 1em; } }

%body

  - if page.title:
    %h1 {{ page.title }}

  {{ page.content }}

  .timestamp
    - if 'category' in page and page.category:
      category: {{ page.category }},
    updated: {{ page.date.strftime("%d %b %Y") }}


  